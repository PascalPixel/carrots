{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./"
  },
  "include": ["*.ts", "lib/**/*.ts", "api/**/*.ts"],
  "exclude": ["node_modules"]
}

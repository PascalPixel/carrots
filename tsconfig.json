{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": "./"
  },
  "include": ["types/**/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules"]
}
